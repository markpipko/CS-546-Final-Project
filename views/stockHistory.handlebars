<main>
  <h1>View Buy/Sell History</h1>
  <h3> Metrics </h3>
  <p id="totalReturn">Total Return: ${{{totalReturn}}} </p>
  <p id="percentGrowth">Total Growth: {{{percentGrowth}}}% </p>
  <p id="volatility">Volatility of Current Portfolio: {{{volatility}}} </p>

  <br>

	{{#each trades}}
        <p>Transaction Type: {{this.transaction}}</p>
        <p>Stock: <a href="/private/stocks/{{this.ticker}}"> {{this.ticker}} </a> </p>
        <p>Value: {{this.value}}</p>
        <p>Amount: {{this.amount}}</p>
        <p>Date: {{this.date}}</p>
        <br />
  {{/each}}

  <button id="refresh"> Refresh </button>
</main> 

<script src="/public/js/stockHistory.js"></script>
