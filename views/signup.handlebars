<h1>Sign Up</h1>
<form action="/signup" method="POST" id="signupForm">
    <label id="firstNameLabelSignup">
        First Name:
        <input type="text" id="firstName_input_signup" name="firstName" />
    </label><br />
    <label id="lastNameLabelSignup">
        Last Name:
        <input type="text" id="lastName_input_signup" name="lastName" />
    </label><br />
    <label id="emailLabelSignup">
        Email:
        <input type="email" id="email_input_signup" name="email" />
    </label><br />
    <label id="passwordLabelSignup">
        Password:
        <input type="password" id="password_input_signup" name="password" />
    </label><br />
    <label id="ageLabelSignup">
        Age:
        <input type="number" id="age_input_signup" name="age" min="0" step="1" />
    </label><br />
    <label id="cashLabelSignup">
        Starting Cash:
        <input type="number" id="cash_input_signup" name="cash" min="0" />
    </label><br />
    <button type="submit" id="sign_up_button">Submit</button>
</form>

{{#if hasErrors}}
    <p>{{error}}</p>
{{/if}}

<a href="/">Back to Login</a>

